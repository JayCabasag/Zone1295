<section class="categories">
  <div class="container">
    <div class="section-header">
      <h2>Shop By Your Favorite Artists</h2>
      <p>Find your favorite group's exclusive merchandise</p>
    </div>
    @* <div class="category-filters">
      <button class="category-btn active" data-filter="all">All Groups</button>
      <button class="category-btn" data-filter="new-arrivals">
        New Arrivals
      </button>
      <button class="category-btn" data-filter="popular">Popular</button>
      <button class="category-btn" data-filter="most-loved">Most Loved</button>
    </div> *@
    <div class="category-grid">
      @if(Model.FavoriteArtistList != null){
        @foreach(var favArtist in Model.FavoriteArtistList){
           <div class="category-card">
              <div class="category-img">
                <img src="@favArtist.Image" alt="@favArtist.Name" />
              </div>
              <h3>@favArtist.Name</h3>
              <a asp-controller="Shop" asp-action="Index" asp-route-filter="@favArtist.Name" class="btn-secondary">View Collection</a>
            </div>
        }
      }
    </div>
  </div>
</section>

<section id="featured" class="featured-products">
  <div class="container">
    <div class="section-header">
      <h2>Featured Products</h2>
      <p>Curated selection of premium merchandise</p>
    </div>
    <div class="product-grid">
      @if(Model.FeaturedProductList != null){
        @foreach(var featuredProduct in Model.FeaturedProductList){
          <div class="product-card" data-category="new-arrivals popular">
            <div class="product-img">
              <img
                src="@featuredProduct.Images[0]"
                alt="Limited Edition Photobook"
              />
              <div class="product-actions">
                <button class="quick-view"><i class="fas fa-eye"></i></button>
                <button class="add-to-wishlist">
                  <i class="far fa-heart"></i>
                </button>
                <button class="add-to-cart">
                  <i class="fas fa-shopping-bag"></i>
                </button>
              </div>
              <div class="product-badge new">New</div>
            </div>
            <div class="product-info">
              <h3>@featuredProduct.Name</h3>
              <p class="product-group">@featuredProduct.Artist</p>
              <p class="product-price">Php @featuredProduct.Price</p>
            </div>
          </div>
        }
      }
    </div>
    <div class="view-more">
      <a asp-controller="Shop" asp-action="Index" class="btn-primary"
        >View All Products</a>
    </div>
  </div>
</section>

<section class="new-arrivals">
  <div class="container">
    <div class="section-header">
      <h2>New Arrivals</h2>
      <p>Be the first to own these exclusive items</p>
    </div>
    <div class="product-slider">
      @if(Model.NewArrivalProductList != null){
        foreach(var newArrivalProduct in Model.NewArrivalProductList){
           <div class="product-card" data-category="new-arrivals">
            <div class="product-img">
              <img
                src="@newArrivalProduct.Images[0]"
                alt="Crystal Embellished Tumbler"
              />
              <div class="product-actions">
                <button class="quick-view"><i class="fas fa-eye"></i></button>
                <button class="add-to-wishlist">
                  <i class="far fa-heart"></i>
                </button>
                <button class="add-to-cart">
                  <i class="fas fa-shopping-bag"></i>
                </button>
              </div>
              <div class="product-badge new">New</div>
            </div>
            <div class="product-info">
              <h3>@newArrivalProduct.Name</h3>
              <p class="product-group">@newArrivalProduct.Artist</p>
              <p class="product-price">Php @newArrivalProduct.Price</p>
            </div>
          </div>
        }
      }
    </div>
  </div>
</section>

<section class="newsletter">
  <div class="container">
    <div class="newsletter-content">
      <h2>Join Our VIP List</h2>
      <p>
        Be the first to know about new releases, exclusive offers, and limited
        editions
      </p>
      <form class="newsletter-form">
        <input type="email" placeholder="Your email address" required />
        <button type="submit" class="btn-primary">Subscribe</button>
      </form>
    </div>
  </div>
</section>
