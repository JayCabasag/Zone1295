  <section class="product-details">
    <div class="container">
      <div class="product-details-layout">
        <div class="product-gallery">
          <div class="main-image">
            <img
              src="@Model.Product.Images[0]"
              alt="Limited Edition Photobook"
              id="main-product-image"
            />
          </div>
          <div class="thumbnail-gallery">
            @foreach(var img in Model.Product.Images){
              <div class="thumbnail active" data-img="https://placehold.co/600x600">
                <img src="@img" alt="@Model.Product.Name" />
              </div>
            }
          </div>
        </div>
        <div class="product-info-details">
          <h1 class="product-title">@Model.Product.Name</h1>
          <p class="product-artist">@Model.Product.Artist</p>
          <div class="product-rating">
            <div class="stars">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
            </div>
            <span class="rating-count">(42 reviews)</span>
          </div>
          <p class="product-price">Php @(Model.Product.Price)</p>
          <div class="product-status in-stock">
            <i class="fas fa-check-circle"></i> In Stock
          </div>
          <div class="product-description">
            @Model.Product.Description
          </div>
          <div class="product-actions-container">
            <div class="quantity-selector">
              <button class="quantity-btn minus">-</button>
              <input
                type="number"
                value="1"
                min="1"
                max="10"
                id="product-quantity"
              />
              <button class="quantity-btn plus">+</button>
            </div>
            <div class="product-buttons">
              <button class="btn-primary add-to-cart-btn">
                <i class="fas fa-shopping-bag"></i> Add to Cart
              </button>
              <button
                class="btn-wishlist product-action-btn"
                id="add-to-wishlist"
              >
                <i class="far fa-heart"></i>
              </button>
              <button
                class="btn-favorite product-action-btn"
                id="add-to-favorites"
              >
                <i class="far fa-star"></i>
              </button>
            </div>
          </div>
          <div class="product-meta">
            <div class="meta-item">
              <span class="meta-label">Category:</span>
              <span class="meta-value">
                @foreach( var category in Model.Product.Category){
                  <a href="#">@category</a>
                }
              </span>
            </div>
            @if(Model.Product.Tags != null){
            <div class="meta-item">
              <span class="meta-label">Tags:</span>
              <span class="meta-value">
                  @foreach(var tag in Model.Product.Tags){
                    <a asp-controller="Shop" asp-action="Index" asp-route-tag="@tag">@tag</a>
                  }
              </span>
            </div>
            }
          </div>
          <div class="product-share">
            <span>Share:</span>
            <div class="share-icons">
              <a href="#"><i class="fab fa-facebook-f"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
              <a href="#"><i class="fab fa-pinterest-p"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

